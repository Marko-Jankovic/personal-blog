{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}
    <div class="content">
        <h2>New Post</h2>

        <form name="save-post" method="post" action="" novalidate>

            {{ showFormError(errors) }}
            <fieldset>
                {{ form_widget(form.title, {'attr': {'placeholder': 'Title' }}) }}
            </fieldset>

            <fieldset>
                {{ form_widget(form.body, {'attr': {'placeholder': 'Write something' }}) }}
            </fieldset>

            <fieldset>
                {{ form_label(form.category, 'Add Category') }}
                {{ form_widget(form.category) }}
            </fieldset>

            {{ form_rest(form) }}

            <input type="submit" class="button-add" name="save-post" value="Save Post"/>
        </form>
    </div>
{% endblock %}