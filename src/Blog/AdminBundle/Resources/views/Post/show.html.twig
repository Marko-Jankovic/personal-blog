{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}
    <div class="content">

        <h2>{{ post.title }}</h2>

        <div class="post-actions">
            <a href="{{ path('admin_post_edit', {'id': post.id }) }}">edit</a>
            <a onclick="confirmDelete('{{ path('admin_post_delete', {'id': post.id }) }}')">delete</a>
        </div>

        <article class="post">
            <header>
                <a href="{{ path('admin_user_edit', {'id':  post.user.id})}}">
                    {{ post.user.username }}
                </a>
            </header>

            <br>

            <p class="entry">{{ post.body}}</p>
        </article>
    </div>
{% endblock %}