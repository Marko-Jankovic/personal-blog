{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}

    <div class="content">
        <h2>Profile Settings</h2>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="button-add top-btn" href="{{ path('admin_user_edit', {id: getUserId(app)}) }}">
                Edit Account
            </a>
        {% endif %}

        <form name="update-profile" method="post" action="" novalidate>

            {{ showFormError(errors) }}

            <fieldset>
                {{ form_label(form.fullName, 'Name') }}
                {{ form_widget(form.fullName, {'attr': {'placeholder': 'Name' }}) }}
            </fieldset>

            <fieldset>
                {{ form_label(form.location, 'Location') }}
                {{ form_widget(form.location, {'attr': {'placeholder': 'Location' }}) }}
            </fieldset>

            <fieldset>
                {{ form_label(form.github, 'Github profile') }}
                {{ form_widget(form.github, {'attr': {'placeholder': 'Github profile' }}) }}
            </fieldset>

            <fieldset>
                {{ form_label(form.twitter, 'Twitter profile') }}
                {{ form_widget(form.twitter, {'attr': {'placeholder': 'Twitter profile' }}) }}
            </fieldset>

            <fieldset>
                {{ form_label(form.linkedin, 'Linkedin profile') }}
                {{ form_widget(form.linkedin, {'attr': {'placeholder': 'Linkedin profile' }}) }}
            </fieldset>

            {{ form_rest(form) }}

            <input type="submit" class="button-add" name="updateUser" value="Update Profile"/>
        </form>
    </div>
{% endblock %}