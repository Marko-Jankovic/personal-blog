{% extends '::base.html.twig' %}

{% block header %}
    <div id="header" class="register-signin-header">
        <a href="{{ path('admin_user_register') }}">Create an Account</a>
        or
        <a href="{{ path('admin_user_login') }}">Login</a>
    </div>
{% endblock %}

{% block container %}

    <form id="login-form" name="login" method="post">
        <h2>Register</h2>
        <fieldset>
            <label for="username">Username *</label>
            <input type="text" placeholder="Username" name="usernamee" id="username"/>
        </fieldset>

        <fieldset>
            <label for="email">Email Address *</label>
            <input type="email" placeholder="Email Address" name="email" id="email" />
        </fieldset>

        <fieldset>
            <label for="password">Password (6 characters minimum) *</label>
            <input type="password" placeholder="Password" name="password" id="password" />
        </fieldset>

        <fieldset>
            <label for="confirm-password">Confirm Password *</label>
            <input type="password" placeholder="Confirm Password" name="confirm-password" id="confirm-password"/>
        </fieldset>

        <button type="submit">Register</button>
    </form>

{% endblock %}

{% block footer %}{% endblock %}