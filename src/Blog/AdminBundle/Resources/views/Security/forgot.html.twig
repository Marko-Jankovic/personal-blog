{% extends '::base.html.twig' %}

{% block header %}
    {% include 'AdminBundle:Security:register-signin-header.html.twig' %}
{% endblock %}

{% block container %}

    <form id="login-form" name="forgot" method="post">
        <h2>Forgot your password</h2>
        <fieldset>
            <label for="email">Please enter your account E-mail address</label>
            <input type="email" placeholder="Email Address" name="email" id="email" />
        </fieldset>

        <fieldset>
            <p>Entering your Email Address we will send you a link to reset your password.</p>
        </fieldset>

        <button type="submit">Submit</button>
    </form>

{% endblock %}

{% block footer %}{% endblock %}