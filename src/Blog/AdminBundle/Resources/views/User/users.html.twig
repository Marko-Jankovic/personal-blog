{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}

    <div class="content">
        <h2>Users</h2>
        <a href="{{ path('admin_user_create') }}" class="button-add">Create User</a>

        <ul>
            {% for user in users %}
                {% if user.id !=  app.user.id %}
                <li>
                    <span>{{ user.username }}</span>

                    <p>
                        {% if user.isActive %}
                        <a href="{{ path('admin_user_status', {'id': user.id, 'flag': 'false' }) }}">
                            Disabale
                        </a>
                        {% else %}
                        <a href="{{ path('admin_user_status', {'id': user.id, 'flag': 'true'}) }}">
                            Enable
                        </a>
                        {% endif %}

                        <a href="{{ path('admin_user_edit', {'id': user.id }) }}">
                            edit
                        </a>
                        <a onclick="confirmDelete('{{ path('admin_user_delete', {'id': user.id }) }}')" href="#">
                            delete
                        </a>
                    </p>
                </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>

{% endblock %}